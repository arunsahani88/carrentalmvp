{
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" if you're using React 17 or below
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx"]
}
